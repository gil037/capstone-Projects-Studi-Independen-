    <ImageButton
        android:id="@+id/ib_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/heart_icon_drawable"
        android:theme="@style/ButtonGeneral"
        app:layout_constraintEnd_toEndOf="@+id/tv_harga_barang"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toEndOf="@+id/iv_barang"
        app:layout_constraintTop_toBottomOf="@+id/tv_harga_barang"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        android:theme="@style/ButtonGeneral"
        app:layout_constraintEnd_toEndOf="@+id/tv_harga_barang"
        app:layout_constraintStart_toEndOf="@+id/ib_favorite"
        app:layout_constraintTop_toBottomOf="@+id/tv_harga_barang" />
</androidx.constraintlayout.widget.ConstraintLayout>