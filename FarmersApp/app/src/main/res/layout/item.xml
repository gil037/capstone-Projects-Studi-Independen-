<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_barang"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:contentDescription="@string/image"
        android:background="@drawable/banner_barang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nama_barang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_barang"
        app:layout_constraintTop_toTopOf="@+id/iv_barang"
        tools:ignore="MissingConstraints"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/tv_harga_barang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nama_barang"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_barang"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_barang"
        tools:text="@tools:sample/us_phones" />

    <TextView
        android:id="@+id/rp_harga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/rp"
        android:layout_marginTop="4dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_harga_barang"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_barang"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_barang" />




    <ImageView
        android:id="@+id/btn_logdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="235dp"
        android:contentDescription="@string/image"
        android:layout_marginTop="10dp"
        android:background="@color/purple_700"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        android:theme="@style/ButtonGeneral"
        app:layout_constraintEnd_toEndOf="@+id/tv_harga_barang"
        app:layout_constraintStart_toEndOf="@+id/iv_barang"
        app:layout_constraintTop_toBottomOf="@+id/tv_harga_barang" />
</androidx.constraintlayout.widget.ConstraintLayout>